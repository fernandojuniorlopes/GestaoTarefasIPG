@model GestaoTarefasIPG.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}


<h1>Criar</h1>

<h4>Funcionario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <a>@ViewBag.Nome</a>
            </div>
            <div class="form-group">
                <label asp-for="Contacto" class="control-label">Contacto:</label>
                <input asp-for="Contacto" class="form-control" />
                <span asp-validation-for="Contacto" class="text-danger"></span>
                <a>@ViewBag.Contacto</a>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <a>@ViewBag.Email</a>
            </div>
            <div class="form-group">
                <label asp-for="NumeroFuncionario" class="control-label">Número de funcionário:</label>
                <input asp-for="NumeroFuncionario" class="form-control" />
                <span asp-validation-for="NumeroFuncionario" class="text-danger"></span>
                <a>@ViewBag.NumeroFunc</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
