}

<h1>Detalhes</h1>

<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contacto):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
