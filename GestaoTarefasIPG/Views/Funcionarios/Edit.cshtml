@model GestaoTarefasIPG.Models.Funcionario

@{
    ViewData["Title"] = "Edit";
}
<style>
    .headColumns{
        color: #db1033;
    }
    .backLink{
        color:#db1033;
    }
    .backLink:hover{
        text-decoration: underline;
        color:#db1033;
    }
    .button{
        color:white;
        background-color:#db1033;
        border:2px solid #db1033;
        border-radius: 8px;
        padding: 3px 10px;
    }

    .button:hover{
        color:#db1033;
        background-color:white;
        border:2px solid #db1033;
        border-radius: 8px;
        padding: 3px 10px;
    }
</style>
<h1 class="headColumns">Edit</h1>

<h4 class="headColumns">Funcionario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FuncionarioId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroTelemovel" class="control-label">Nº telemóvel</label>
                <input asp-for="NumeroTelemovel" class="form-control" />
                <span asp-validation-for="NumeroTelemovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="backLink">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
