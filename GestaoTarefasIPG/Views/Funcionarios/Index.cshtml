@model FuncionariosViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="title">Lista de funcionários</h1>

<p>
    <a asp-action="Create">Adicionar novo funcionário</a>
</p>

@using (Html.BeginForm())
{
    <p>
        Nome: <input type="text" name="searchString" value="@Model.StringProcura" placeholder="Procurar por nome" />
        <button type="submit" class="btn btn-light" asp-action="Index" asp-route-page="1" asp-route-searchString="@Model.StringProcura">Procurar</button>
        <a asp-action="Index" class="btn btn-info">Lista inteira</a>
    </p>
}

<script>

    function sort() {
        let sort = @Model.Sort;
        let stringProcura = '@Model.StringProcura';

        var result = "true".localeCompare(sort);

        console.log('antes - ' + sort);

        if (result == 0) {
            sort = "false";
        } else {
            sort = "true";
        }

        console.log('depois - ' + sort);

        const url = 'https://' + window.location.host + '/Funcionarios?page=1&sort=' + sort + '&searchString=' + stringProcura;

        console.log('url - ' + url)

        window.location.replace(url);
    }

</script>

<table class="table table-striped" align="center">
    <thead>
        <tr>
            <th>
                <a onclick="sort()">Nome</a>
            </th>
            <th>
                Contacto
            </th>
            <th>
                Email
            </th>
            <th>
                Número de funcionário
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Funcionarios) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                <p>@Html.DisplayFor(modelItem => item.Email)</p>
            </td>
            <td>
                <p>@Html.DisplayFor(modelItem => item.NumeroFuncionario)</p>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuncionarioId" class="btn btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.FuncionarioId" class="btn btn-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.FuncionarioId" class="btn btn-danger">Remover</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@for (int i = 1; i <= Model.TotalPaginas; i++) {

    @if (i == Model.PaginaAtual) {

        <a href="#" class="btn btn-outline-primary">@i</a>

    } else {

        <a asp-action="Index" asp-route-page="@i" class="btn btn-outline-info">@i</a>
    }
}
